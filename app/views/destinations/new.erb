<html>
  <h2>New Destination</h2><br>
  <% if @error %>
    <div class="alert">
      <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
      <strong>Error! </strong> Please enter valid data.
    </div>
  <% end %>
  <form action="/destinations" method="POST">
    <label>Location </label>
    <input type="text" name="destination[location]"required><br><br>
    <label>Date Visited </label>
    <input type="date" name="destination[date_visited]"required><br><br>
    <button class="btn btn-lg btn-success" type="submit">Add Destination</button><br>
  </form>
</html>