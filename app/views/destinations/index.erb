<html>
  <head>
    <style align: center>
      * {
        text-align: center;
      }
      h1, p, ol {
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        color: #4682B4;
      }
    </style>
  </head>
  <body>
    <h1>Destinations</h1>
    <p>
      <% @destinations.each do |destination| %>
        <ol>
          <strong>
            <a href="/destinations/<%= destination.id %>"><%= destination.location %></a>
          </strong> | <%= destination.date_visited %>
        </ol>
        <% end %>
    </p>
  </body>
</html>
