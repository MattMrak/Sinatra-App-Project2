<html>
  <head>
    <style>
      * {
        text-align: center;
      }
      h1, label {
        font-family: Georgia, serif;
        color: #4682B4;
      }
      ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: #4682B4;
      }
      li {
        float: left;
      }
      li a {
        display: block;
        color: white;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
      }
      li a:hover {
        background-color: #2F4F4F;
      }
      .active {
        background-color: #4CAF50;
      }
    </style>
  </head>
  <body>
    <h1>Editing | <%= @destination.location %></h1>
    <form method="POST" action="/destinations/<%= @destination.id %>">
      <input type="hidden" name="_method" value="PUT">
      <label for="location_field">Location</label>
      <input type="text" name="destination[location]" value="<%= @destination.location %>">
      <label for="date_visited_field">Date Visited</label>
      <input type="text" name="destination[date_visited]" value="<%= @destination.date_visited %>">
      <input type="submit" value="Submit">
    </form>
  </body>
</html>
<br>
<ul>
  <li><a href="/destinations/<%= @destination.id %>">Go Back</a></li>
</ul>



